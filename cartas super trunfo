#include <stdio.h>

// Desafio Super Trunfo - Países
// Tema 1 - Cadastro das cartas
// Objetivo: No nível novato você deve criar as cartas representando as cidades utilizando scanf para entrada de dados e printf para exibir as informações.

int main() {

// Área para definição das variáveis para armazenar as propriedades das cidades
int populacao,populacao2;
float pib,pib2;
char nome[50];char nome2[50];
int pontos,pontos2;

// Área para entrada de dados
printf("insira o nome da 1° cidade: \n");
scanf("%s[^\n]",&nome);
printf("insira a população da cidade: \n");
scanf("%d" ,&populacao);
printf("insira o PIB:\n");
scanf("%f",&pib);
printf("Quantidade de pontos turisticos:\n");
scanf("%d",&pontos);
// Área para exibição dos dados da cidade
printf("nome da cidade:%s \n",nome);
printf("população: %d \n",populacao);
printf("PIB do local: %f \n", pib);
printf("Quantidade de pontos turisticos do local: %d \n",pontos);

printf("insira o nome da 2° cidade: \n");
scanf("%s[^\n]",&nome2);
printf("insira a população da cidade: \n");
scanf("%d" ,&populacao2);
printf("insira o PIB:\n");
scanf("%f",&pib2);
printf("Quantidade de pontos turisticos:\n");
scanf("%d",&pontos2);
// Área para exibição dos dados da cidade
printf("nome da cidade:%s \n",nome2);
printf("população: %d \n",populacao2);
printf("PIB do local: %f \n", pib2);
printf("Quantidade de pontos turisticos do local: %d \n",pontos2);
return 0;
} 
